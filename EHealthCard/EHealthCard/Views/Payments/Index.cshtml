@model IEnumerable<EHealthCard.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<h1>Payments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="Search">Search Payments</a>
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HospitalName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentPeriod)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HospitalName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentPeriod)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", item) |
                        @Html.ActionLink("Details", "Details", item) |
                        @Html.ActionLink("Delete", "Delete", item)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}