@model EHealthCard.Models.Payment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HospitalName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HospitalName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.PaymentPeriod)
        </dt>
        <dd class="col-sm-8">
            @Model.PaymentPeriod.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.PaymentDate)
        </dt>
        <dd class="col-sm-8">
            @Model.PaymentDate.ToString("dd.MM.yyyy")
        </dd
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PaymentId" />
        <input type="hidden" asp-for="HospitalName" />
        <input type="hidden" asp-for="CompId" />
        <input type="hidden" asp-for="Details" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
