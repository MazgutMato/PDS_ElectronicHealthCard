@model IEnumerable<EHealthCard.Models.Hospital>

@{
    ViewData["Title"] = "Index";
}

<h1>Hospitals</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="Search">Search Hospitals</a>
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HospitalName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capacity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Zip)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HospitalName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Zip)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.HospitalName">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.HospitalName">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.HospitalName">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}