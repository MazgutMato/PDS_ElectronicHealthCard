@model IEnumerable<EHealthCard.Models.HospitalizationTableRecord>

@{
    ViewData["Title"] = "Table";
}

@using (Html.BeginForm())
{
    <div class="row from-group">
        <div class="col">
            <label>Year</label>
            <input type="number" name="p_year" class="form-control"></input>
        </div>
        <div class="col">
            <label>Hospital Name</label>
            <input type="text" name="p_hospitalName" class="form-control"></input>
        </div>
        <div class="col align-self-center">
            <button type="submit" class="btn btn-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-bar-down" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1 3.5a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13a.5.5 0 0 1-.5-.5zM8 6a.5.5 0 0 1 .5.5v5.793l2.146-2.147a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 0 1 .708-.708L7.5 12.293V6.5A.5.5 0 0 1 8 6z" />
                </svg>
                Display
            </button>
        </div>
    </div>
}

@if (Model.Count() != 0)
{
    <h3 align="center">Count of Diagnosis Cases in Hospital Over Year</h3>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Diagnoses
                </th>
                <th>
                    First
                </th>
                <th>
                    Second
                </th>
                <th>
                    Third
                </th>
                <th>
                    Fourth
                </th>
                <th>
                    Fifth
                </th>
                <th>
                    Sixth
                </th>
                <th>
                    Seventh
                </th>
                <th>
                    Eighth
                </th>
                <th>
                    Ninth
                </th>
                <th>
                    Tenth
                </th>
                <th>
                    Eleventh
                </th>
                <th>
                    Twelveth
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.first)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.second)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.third)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fourth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fifth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sixth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.seventh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.eighth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ninth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tenth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.eleventh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.twelveth)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


