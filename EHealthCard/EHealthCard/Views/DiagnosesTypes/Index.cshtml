@model IEnumerable<EHealthCard.Models.DiagnosesType>

@{
    ViewData["Title"] = "Index";
}

<h1>Diagnoses Types</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="Search">Search Diagnosis Type</a>
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DiagnosisId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DailyCosts)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiagnosisId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DailyCosts)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DiagnosisId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.DiagnosisId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.DiagnosisId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
