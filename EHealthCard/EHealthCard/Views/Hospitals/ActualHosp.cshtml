@model IEnumerable<EHealthCard.Models.HospitalCapacity>

@{
    ViewData["Title"] = "HospitalCapacity";
}

@using (Html.BeginForm())
{
    <div class="row form-group">
        <div class="col">
            <label>Zip</label>
            <input type="text" name="zip" class="form-control"></input>
        </div>
        <div class="col align-self-center">
            <button type="submit" class="btn btn-info">
                Search
            </button>
        </div>
    </div>
}

@if (Model.Count() != 0)
{
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Hospital Name
                </th>
                <th>
                    Actual Hospitalizations
                </th>
                <th>
                    Capacity
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HospitalName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentHosp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
