@model IEnumerable<EHealthCard.Models.Diagnosis>

@{
    ViewData["Title"] = "Index";
}

<h1>Diagnosis</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="Search">Search Diagnosis</a>
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PersonId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HospitalName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiagnosisId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Document)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HospitalName)
                    </td>
                    <td>

                        @item.DateStart.ToString("dd.MM.yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiagnosisId)
                    </td>
                    <td>
                        @{
                            if (item.Document.Length != 0)
                            {
                                var base64 = Convert.ToBase64String(item.Document);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                <img src="@imgSrc" width="240" height="240" />
                            }
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new {start = item.DateStart, p_id = item.PersonId, hos_name = item.HospitalName, dia_id = item.DiagnosisId }) |
                        @Html.ActionLink("Delete", "Delete",  new {start = item.DateStart, p_id = item.PersonId, hos_name = item.HospitalName, dia_id = item.DiagnosisId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
